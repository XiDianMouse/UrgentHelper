<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/colorTheme" android:width="1dp"></stroke>
            <corners android:radius="2000dp"></corners>
            <padding android:bottom="6dp" android:top="6dp" android:left="12dp" android:right="12dp"></padding>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/colorTheme" android:width="1dp"></stroke>
            <solid android:color="@color/colorTheme"></solid>
            <corners android:radius="2000dp"></corners>
            <padding android:bottom="6dp" android:top="6dp" android:left="12dp" android:right="12dp"></padding>
        </shape>
    </item>
</selector>