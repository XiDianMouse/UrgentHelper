<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <padding android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp"/>
            <size android:width="120dp" android:height="120dp"/>
            <stroke android:color="@color/colorTheme" android:width="1dp"/>
            <gradient
                android:startColor="@color/yellow"
                android:endColor="@color/colorTheme"
                android:centerColor="@color/white"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="120"
                android:type="radial"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <padding android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp"/>
            <size android:width="60dp" android:height="60dp"/>
            <stroke android:color="@color/colorTheme" android:width="1dp"/>
            <solid android:color="@color/colorTheme"/>
        </shape>
    </item>
</selector>